  <div class="container-fluid page-top">
    <nav class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    <%= image_tag "bike.png", class: "navbar-brand logo collapsed" %>
    <%= link_to 'Outdoor Travel Guide', root_path, class: "navbar-brand collapsed" %>
      <ul class="nav navbar-nav pull-right">
         <%= link_to 'Home', root_path, class: "navbar-text collapsed"  %>
         <%= link_to 'Help', help_path, class: "navbar-text collapsed" %>
