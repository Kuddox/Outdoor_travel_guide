<%= form_for(@review, remote: using_modal, :authenticity_token => true) do |f| %>
  <div class="panel panel-info" >
   
  	  <%= f.label :name %>
  	  <%= f.text_field :name %>

  	  <%= f.label :rating %>
  	  <%= f.select :rating, ["1 star", "2 stars", "3 stars", "4 stars", "5 stars"] %>
   
      
  	  <%= f.label :body %>
  	  <%= f.text_field :body %>

      
    <div class='field'>
      <%= f.label :photo, "Photo" %>
      <%= f.file_field :photo %>
    </div>

  	<%= f.hidden_field :unique_id, value: params[:unique_id] %>

    <%= f.submit %>
	  <% if using_modal %>
      <button type="button" data-dismiss="modal">Close</button>
    <% end %>
  
  </div> 
<% end %>